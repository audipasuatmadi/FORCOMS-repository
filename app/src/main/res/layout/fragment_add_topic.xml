<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".topicentity.AddTopicFragment"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/add_topic_title"
        android:text="@string/title_topic"/>

    <EditText
        android:id="@+id/add_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/WhiteSmoke"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/add_topic_comment"
        android:text="@string/question_topic"/>
    
    <EditText
        android:id="@+id/add_topic_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:gravity="top|start"
        android:inputType="text|textMultiLine"
        android:background="@color/WhiteSmoke"/>
    
    <Button
        android:id="@+id/add_topic_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueRoyal"
        android:backgroundTint="@color/white"
        android:text="@string/start_topic"/>
    

</LinearLayout>